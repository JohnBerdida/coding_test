{
    "compilerOptions": {
      /* Basic Options */
      "target": "ES2020",                      // Use modern syntax targeting Node.js 20
      "module": "CommonJS",                    // Node.js uses CommonJS by default
      "outDir": "./dist",                      // Output directory for compiled files
      "rootDir": "./src",                      // Root directory of source files
      "moduleResolution": "Node",             // Use Node.js-style module resolution
      "esModuleInterop": true,                // Enable interoperability between CommonJS and ES modules
      "skipLibCheck": true,                   // Skip type checking of declaration files for faster builds
  
      /* Strict Type-Checking Options */
      "strict": true,                         // Enable all strict type-checking options
      "noImplicitAny": true,                  // Disallow `any` type unless explicitly declared
      "strictNullChecks": true,               // Ensure all nullable types are checked
      "strictPropertyInitialization": true,  // Ensure class properties are initialized
      "noImplicitThis": true,                 // Ensure `this` is properly typed
      "alwaysStrict": true,                   // Parse files in strict mode and emit `"use strict"`
  
      /* Additional Checks */
      "forceConsistentCasingInFileNames": true, // Enforce consistent file naming casing
  
      /* Code Generation Options */
      "sourceMap": true,                     // Enable source maps for debugging
      "declaration": true,                   // Emit `.d.ts` files for TypeScript definition
      "declarationMap": true,                // Emit `.d.ts.map` files for debugging declarations
  
      /* Advanced Options */
      "resolveJsonModule": true,             // Allow importing JSON files
      "allowSyntheticDefaultImports": true, // Allow default imports even if module doesn't support them
      "experimentalDecorators": true,       // Enable support for decorators
      "emitDecoratorMetadata": true         // Emit metadata for decorators (used with `reflect-metadata`)
    },
    "include": ["src"],                       // Include all source files in `src` directory
    "exclude": ["node_modules", "dist"]       // Exclude `node_modules` and `dist` directories
  }